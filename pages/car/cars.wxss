/* ----------------------------------品牌列表------------------------------------- */
.title {
position: relative;
padding: 10px 0;
}
.title_list {
display: inline-block;
padding: 0 15px;
height: 20px;
line-height: 20px;
font-size: 38rpx;
}
.title button {
width: 50px;
height: 30px;
font-size: 38rpx;
padding: 0;
line-height: 30px;
margin: auto;
position: absolute;
top: 0;
bottom:0;
right: 10px;
background: none;
}
.title button::after {
border: none;
}
.title_list:nth-child(1) {
border-right:1px #ccc solid;
}
/*城市列表*/
.city_list {
position: relative;
}
/*城市选择头部*/
.list_tit {
display: block;
/* line-height: 40px; */
height: 50rpx;
padding-left: 15px;
font-size: 34rpx;
background: #efeff4;
color: #666;
}
.list_con {
height: 40px;
/* border-top: 1px #f5f5f5 solid ; */
line-height: 40px;
font-size: 16px;
}
 .list_con::before {
content: " ";
height: 1px;
border-top: 1px #f5f5f5 solid;
position: absolute;
width: 100%;
}
.list_con::before:nth-child(1) {
border: none;
} 
/*城市选择 右边*/
.scroll_list {
background: rgba(0,0,0,0);
position: fixed;
height: calc(100% - 100px);
width: 25px;
top: 30px;
right: 10px;
}
.scroll_list_chi {
/*border: 1px blue solid;*/
text-align: center;
font-size: 28rpx;
}
/*显示框*/
.showwords {
width: 80px;
height: 80px;
background: rgba(0,0,0,0.04);
border-radius:50%;
line-height: 80px;
text-align: center;
font-size:10vw;
margin: auto;
position: fixed;
top: 0;left: 0;bottom: 0;right: 0;
z-index: 999;
}

.brand-list{
  position: absolute;
  width: 100%
}

.brand-flex{
  display:flex;
  /* justify-content:center; */
  flex-flow: wrap row;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}