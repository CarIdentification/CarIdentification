<!--pages/shop/shop_info/shop_info.wxml-->
<view class='container'>
  <view class='page-flex-column'>
    <image mode='aspectFill' src="/resource/image/sell-shop/sell_shop_1.jpg" class="slide-image"/>
    <view class='row'>
      <image src="/resource/image/phone.png" class='phone' bindtap='callPhone'></image>
      <view class='column'>
        <view class='car_name' >{{shop_info.title}}</view>
        <view class='address'>{{shop_info.address}}</view>
      </view>
    </view>
    

  </view>
  <view class='salesman_list'>
      <block wx:for="{{salesmans}}">
        <view class='salesman_cell'>
          <view class='title'>店名：{{item.sellShopInfo.shopName}}</view>
          <view class='title'>地址：{{item.sellShopInfo.locationDetail}}</view>
          <view class='title'>销售人员:</view>
          <view class='page-flex-row-noCenter'>
            <image mode='aspectFill' class='personal_icon' src='/resource/image/person-pic/{{item.personalPic}}'></image>
            <view class='text-flex-column'>
              <view>姓名：{{item.name}}</view>
              <view>联系方式：{{item.tel}}</view>
            </view>
          </view>
        </view>
      </block>
    </view>
</view>
