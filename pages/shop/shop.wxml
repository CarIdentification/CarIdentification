<import src="/template/nav" />



<cover-view class="flex fix_nav_wp" style='overflow:visible'>
  <block wx:for="{{navData}}" wx:key="">
      <template is="cover_nav" data="{{...item}}"/>
  </block>
</cover-view>
<cover-view class="nav_link" style='height:120rpx;width:120rpx;position:fixed;bottom:47rpx;z-index:11;left:316rpx;' bindtap="gotoIndex">
  <button class="defalut_btn">

    <cover-view class="plus_wp">
      <cover-image src='/resource/image/tabBar_index_0.png' class="plus_ico"></cover-image>
    </cover-view>
    <!-- <cover-view class="txt txt_fb">识别</cover-view> -->
    
  </button> 
</cover-view>
 <map 
  id="map" 
  longitude="{{longitude}}" 
  latitude="{{latitude}}" 
  scale="{{scale}}" 
  bindcontroltap="controltap" 
  markers="{{markers}}" 
  bindmarkertap="markertap" 
  polyline="{{polyline}}" 
  bindregionchange="regionchange"
  bindtap="clicktap"
  bindcallouttap="callouttap"
  show-location style="width: 100%; height: {{view.Height}}px;">

  
<cover-view style='display:flex;flex-direction:column;justify-content:center;height:100%;width:0rpx;'>
  <cover-view class="left_botton">
    <cover-view class=" {{shopType?'choose':'unchoose'}}" bindtap='chooseType' data-type='1'>
      <cover-view class='text'>销售点</cover-view>
    </cover-view>

    <cover-view class=" {{!shopType?'choose':'unchoose'}}"  bindtap='chooseType' data-type='0'>
      <cover-view class='text'>服务点</cover-view>
    </cover-view>
    
  </cover-view>
</cover-view>
</map>



