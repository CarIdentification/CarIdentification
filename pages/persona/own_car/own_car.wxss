/* pages/persona/own_car/own_car.wxss */
@import "/wxParse/wxParse.wxss";
.navigation{
  font-weight: bold;
  font-size: 25px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}


.float-navigation {    /*导航浮动起来的css*/
  position: fixed;
  top: 0;
  z-index: 1000;
}

.owncar-container{
  margin: 5px;
}
.car-info-item {
  background: #ffffff;
  margin: 10px;
  padding: 5px;
  box-shadow:2px 2px 5px 5px #DADCDB;
  border-radius: 5px;
}
.cover-pic{
  width : 100%;
}

.delOwnCar{
  width: 18px;
  height: 18px;
  float: right;
  margin: 10px;
}

.car-title{
  font-weight: bold;
  font-size: 16px;
  margin: 5px;
  float: left;
}